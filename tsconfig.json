{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "module": "es2015",
    "moduleResolution": "node",
    "rootDir": "./src",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "outDir": "dist/esm",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "lib": [
      "es2015",
      "dom",
      "es2017"
    ],
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "files": [
    "./src/index.ts"
  ],
}
